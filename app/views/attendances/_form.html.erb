      <%= form.label :teacher, "Teacher (#{accessible_teachers.count})" %><br />
      <%= form.select(:teacher_id, options_for_select(accessible_teachers), {include_blank: true}, {class: 'form-select form-select col-md-4'}) %>
    </div>
  </div>

    <div class="row col-md px-5">
    <div class="form-group col-md-6 pt-5">
      <%= form.label :student, "Student (#{accessible_students.count})", style: "display: block" %>
      <%= form.select :student_id, options_for_select(accessible_students), {include_blank: true}, { class: 'form-select form-select col-md-4' } %>
    </div>      
    <div class="form-group col-md pt-5">
      <%= form.label :i_class, "Attendance type" %><br />
