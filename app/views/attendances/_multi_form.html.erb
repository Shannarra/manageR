<%= form_with(model: attendance, url: start_multi_attendances_url) do |form| %>
  <% if attendance.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(attendance.errors.count, "error") %> prohibited this attendance from being saved:</h2>

      <ul>
        <% attendance.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="row col-md px-5">
      <div class="form-group col-md pt-5">
        <%= form.label :i_class, "Class name (#{accessible_classes.count})" %><br />
        <%= form.select(:i_class_id, options_for_select(accessible_classes), {include_blank: true}, {class: 'form-select form-select col-md-4'}) %>
      </div>
      <div class="form-group col-md pt-5">
        <%= form.label :teacher, "Teacher (#{accessible_teachers.count})" %><br />
        <%= form.select(:teacher_id, options_for_select(accessible_teachers), {include_blank: true}, {class: 'form-select form-select col-md-4'}) %>
        <%= form.hidden_field :partial, { value: true }%>
      </div>
    </div>
    <div class="row col-md p-5">
      <%= form.submit 'Start class attendance', class: "btn btn-success" %>
    </div>
<% end %>

