<div class="container-fluid">
  <div class="flex-nowrap justify-content-center">
    <%= form_with(model: subject) do |form| %>
    <% if subject.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(subject.errors.count, "error") %> prohibited this subject from being saved:</h2>

      <ul>
        <% subject.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="row col-md px-5">
      <div class="form-group col-md-6 pt-5">
        <%= form.label :name %><br />
        <%= form.text_field :name, class: 'form-control col-md-4', autofocus: true, autocomplete: "name", maxlength: 50 %>
      </div>      
      <div class="form-group col-md pt-5">
        <%= form.label :year %><br />
        <%= form.text_field :year, class: 'form-control col-md-4', autofocus: true, autocomplete: "year", maxlength: 50 %>
      </div>      
    </div>

    <div class="row col-md px-5">
      <div class="form-group col-md-6 pt-5">
        <%= form.label :user_id, 'Head teacher', style: "display: block" %>
        <%= form.select :user_id, options_for_select(institution_users), {}, { class: 'form-select form-select col-md-4' } %>

      </div>      
      <div class="form-group col-md pt-5">
        <%= form.label :i_class_id, "Class" %><br />
        <%= form.select(:i_class_id, options_for_select(subject_institution_classes), {}, {class: 'form-select form-select col-md-4'}) %>
      </div>
    </div>

    <div class="row col-md px-5">
      <div class="form-group col-md pt-5">
        <%= form.label :description %><br />
        <%= form.text_area :description, class: 'form-control textarea col-md-4 flex', autofocus: true, autocomplete: "description", rows: 20 %>
      </div>      
    </div>

    <div class="row px-5 py-2">
      <div class="actions form-group pt-4 col-md">
        <%= form.submit "Update", class: 'btn btn-success w-100' %>
      </div>
    </div>

    <% end %>
  </div>
</div>
