<div class="container-fluid">
  <div class="flex-nowrap">
    <div class="col col-md-8 p-5 mx-auto" data-controller="form-element" data-form-controller-action="click->setAccessTypeTooltop">
      <h2 class='d-flex justify-content-center'>Verify your institution </h2>
      <div class="text-danger h5">
        <%= alert %>
      </div>
      <%= form_for(current_user, url: update_user_path) do |f| %>
        <div class="row">
          <div class="form-group col-md pt-5">
            <%= f.label :institution_code %><br />
            <%= f.text_field :institution_code, class: 'form-control col-md-4', autofocus: true, autocomplete: "name", required: true %>
          </div>
          
          <div class="form-group col-md pt-5">
            <%= f.label :password %><br />
            <%= f.password_field :password, class: 'form-control col-md-4', autofocus: true, autocomplete: "email", required: true %>
          </div>
          <div class="actions form-group pt-4 col-md-12">
            <%= f.submit "Verify now", class: 'btn btn-success w-100', data: { target: "form-element.output" } %>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>
