<div id="<%= dom_id i_class %>">
  <div class="container-fluid">
    <div class="flex-nowrap">
      <h2 class='d-flex justify-content-center'><%= i_class.name %></h2>
      <h6 class='d-flex justify-content-center'>Study Year: <%= i_class.year %></h6>
      <h6 class='d-flex justify-content-center'>Currently enrolled students: <%= students_for_class(i_class) %></h6>

      <div class="col col-md-8 p-5 mx-auto">
        <div class="row">
          <div class="form-group mt-5 text-roboto">
            <%= i_class.description %>
          </div>
          <div class="row form-group mt-5">
            <div class="col col-md-10">
              <%= link_to 'Visit class subjects', subjects_url(institution_name: i_class.institution.name, class_id: i_class), class: 'btn btn-primary' %>
            </div>
            <% if current_user.has_elevated_privileges? %>
            <div class="col col-md form-group">
              <%= link_to "Edit this class", edit_class_url(institution_name: institution.name, class_id: i_class), class: 'btn btn-success' %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
