<h1 class="text-center">All Grades</h1>


<% if current_user.can_grade? %>
<div class="text-center mb-3">
  <%= link_to "+ New grade", new_grade_path, class: "btn btn-success" %>
</div>
<% end %>


<div id="grades">
  <% @grades.each do |grade| %>
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <%= render grade %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
