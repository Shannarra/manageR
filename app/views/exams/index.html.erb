<h1 class="text-center mb-3">Exams</h1>

<% if current_user.can_grade? %>
<div class="text-center mb-3">
  <%= link_to "+ New exam", new_exam_path, class: "btn btn-success" %>
</div>
<% end %>

<div id="exams">
  <% @exams.each do |exam| %>
  <div class="col-md-8 mx-auto">
    <div class="card">
      <div class="card-body">
        <div class="row">
          <%= render exam %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
