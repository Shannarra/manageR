<div class="container-fluid">
  <div class="flex-nowrap justify-content-center">
    <%= form_with(model: exam) do |form| %>
    <% if exam.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(exam.errors.count, "error") %> prohibited this exam from being saved:</h2>

      <ul>
        <% exam.errors.each do |error| %>
        <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="row col-md px-5">
      <div class="form-group col-md-6 pt-5">
        <%= form.label :name %><br />
        <%= form.text_field :name, class: 'form-control col-md-4', autofocus: true, autocomplete: "name", maxlength: 50 %>
      </div>      

      <div class="form-group col-md pt-5">
        <%= form.label :exam_type %><br />
        <%= form.select :exam_type, Exam.creation_types, {}, { class: 'form-select col-md-4', autofocus: true, autocomplete: "year", maxlength: 50 }%>
      </div>      
    </div>

    <div class="row col-md px-5">
      <div class="form-group col-md-6 pt-5">
        <%= form.label :subject, 'Subject', style: "display: block" %>
        <%= form.select :subject_id, institution_subjects, {}, { class: 'form-select form-select col-md-4' } %>

      </div>      
      <div class="form-group col-md pt-5">
        <%= form.label :user_id, "Teacher" %><br />
        <%= form.select(:user_id, institution_teachers, {}, {class: 'form-select form-select col-md-4'}) %>
      </div>
    </div>

    <div class="row col-md px-5">
      <div class="form-group col-md pt-5">
        <%= form.label :attachment %><br />
        <%= form.file_field :attachment, class: 'form-control col-md-4', autofocus: true, autocomplete: "name", maxlength: 50 %>
        <%= form.hidden_field :attachment_cache %>
      </div>

      <div class="form-group col-md pt-5">
        <%= form.label :schedule, "Schedule for" %><br />
        <%= form.date_field :schedule, class: 'form-select form-select col-md-4' %>
      </div>
    </div>

    <div class="row px-5 py-2">
      <div class="actions form-group pt-4 col-md">
        <%= form.submit "Update", class: 'btn btn-success w-100' %>
      </div>
    </div>

    <% end %>
  </div>
</div>
